<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cursovoi_qiz_wpf_mvvm_data_base_25_05_2023"
        xmlns:local1="clr-namespace:MVVMENTITY" x:Class="MVVMENTITY.Window1"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800" WindowStartupLocation="CenterScreen" FontSize="10">
    <Grid Margin="0,0,400,186">
        <Image   Stretch="Fill" Source="/water.png" Margin="0,0,-400,-200"/>
        <ListBox Grid.Column="0" Margin="50" ItemsSource="{Binding Dogs}"
                 SelectedItem="{Binding SelectedDog}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontSize="18" Text="{Binding Path=DogName}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="принять выбранный  ответ" FontSize="18" Margin="50,347,50,-160"/>
       
    </Grid>
</Window>
